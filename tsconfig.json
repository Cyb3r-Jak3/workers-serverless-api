        "target": "ES2021",
        "lib": ["ES2021"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "types": [
            "@cloudflare/workers-types/experimental",
            "@cloudflare/vitest-pool-workers",
