        "module": "ES2022",
        "target": "ES2021",
        "lib": ["ES2021"],
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "types": ["@cloudflare/workers-types/experimental", "@types/node"]
    },
    "include": [
        "src",
        "__tests__/index.test.ts",
        "src/misc.test.ts",
        "src/index.test.ts"
